<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="messageSource" class="com.ygjt.gdn.ftisp.utils.service.CustomReloadableResourceBundleMessageSource">
        <property name="basenames" value="classpath*:META-INF/language/messages,static/i18n/messages"/>
        <property name="defaultEncoding" value="utf-8"/>
        <property name="useCodeAsDefaultMessage" value="true"/>
        <property name="loadWebResource" value="true"/>
    </bean>
</beans>